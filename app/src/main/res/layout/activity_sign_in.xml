<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signInActiviy"
            android:layout_marginBottom="@dimen/TopMargin8"
            android:layout_marginTop="@dimen/TopMargin8"
            android:gravity="center"
            android:text="@string/separator"


            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/signIn_email_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/primary"
            android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailWrapper"
            android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/signIn_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signIn_email_address"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/primary"
            android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/signInActiviy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_button_min_height_material"
            android:layout_below="@id/passwordWrapper"
            android:layout_marginTop="@dimen/TopMargin32"
            android:background="@color/colorPrimaryDark"
            android:onClick="signIn"
            android:text="@string/button_signIn" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator"
            android:layout_marginBottom="30dip" />

    </RelativeLayout>
</RelativeLayout>
